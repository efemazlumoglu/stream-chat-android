<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:stream="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.getstream.sdk.chat.viewmodel.ChatActivityViewModel" />



        <variable
            name="showMainProgressbar"
            type="boolean" />

        <variable
            name="showLoadMoreProgressbar"
            type="boolean" />



        <variable
            name="noConnection"
            type="boolean" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/chat_theme"
        tools:context=".view.activity.ChatActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:background="@drawable/toolbarback"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="PrivateResource">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_back"
                    style="@style/text"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/round_thread_close"
                    android:gravity="center"
                    android:text="â€¹"
                    android:textSize="20sp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_header_avatar"
                    app:layout_constraintStart_toEndOf="@+id/tv_back"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_channel_name"
                        style="@style/text_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/tv_active"
                        style="@style/text_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_channel_initial"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/circle_channel_initials"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_header_avatar"
                    app:layout_constraintEnd_toEndOf="@+id/iv_header_avatar"
                    app:layout_constraintStart_toStartOf="@+id/iv_header_avatar"
                    app:layout_constraintTop_toTopOf="@+id/iv_header_avatar" />

                <ImageView
                    android:id="@+id/iv_header_avatar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_active_mark"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/circle_user_online"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/iv_header_avatar"
                    app:layout_constraintStart_toEndOf="@+id/iv_header_avatar"
                    app:layout_constraintTop_toTopOf="@+id/iv_header_avatar" />
            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/ll_composer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header"
            tools:listitem="@layout/list_item_message" />

        <!--<TextView-->
        <!--android:id="@+id/tv_new_message"-->
        <!--style="@style/text_s"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="5dp"-->
        <!--android:background="@drawable/round_action_send"-->
        <!--android:gravity="center"-->
        <!--android:paddingStart="8dp"-->
        <!--android:paddingEnd="8dp"-->
        <!--android:text="New Messages!"-->
        <!--android:textColor="@color/white"-->
        <!--android:visibility="gone"-->
        <!--app:layout_constraintBottom_toTopOf="@+id/ll_composer"-->
        <!--app:layout_constraintEnd_toEndOf="@+id/ll_composer"-->
        <!--app:layout_constraintStart_toStartOf="@+id/ll_composer" />-->

        <include
            android:id="@+id/cl_thread"
            layout="@layout/view_thread"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/ll_composer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <com.getstream.sdk.chat.view.MessageInputView
            android:id="@+id/message_input"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/chat_theme"

            />

        <TextView
            style="@style/text_s"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_chat_no_connection"
            android:gravity="center"
            android:text="@string/no_connection"
            android:textColor="@color/red"
            android:visibility="visible"
            app:isGone="@{!noConnection}"
            app:layout_constraintBottom_toTopOf="@+id/ll_composer"
            app:layout_constraintEnd_toEndOf="@+id/ll_composer"
            app:layout_constraintStart_toStartOf="@+id/ll_composer" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isGone="@{!showMainProgressbar}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:isGone="@{!showLoadMoreProgressbar}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header" />

    </android.support.constraint.ConstraintLayout>
</layout>
